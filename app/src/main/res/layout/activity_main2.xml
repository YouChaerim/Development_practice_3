<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="124dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:src="@drawable/logo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"/>

        <!-- viewpager to show images -->

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerMain"
            android:layout_width="wrap_content"
            android:layout_height="268dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BC4300FD"
            android:orientation="horizontal" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/dayImage"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:background="@color/white"
                android:src="@drawable/dday_back" />

            <TextView
                android:id="@+id/expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="43dp"
                android:paddingTop="58dp"
                android:text="여기에 글"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="243dp"
                android:paddingTop="112dp"
                android:text="0000년 00월 00일"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nameoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="285dp"
                android:paddingTop="140dp"
                android:text="故 강기동님"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Dday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:paddingTop="140dp"
                android:text="D-0000"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/imageBtn1"
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:adjustViewBounds="false"
            android:background="@color/white"
            android:cropToPadding="false"
            android:src="@drawable/group2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>